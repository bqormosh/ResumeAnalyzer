@{
    ViewData["Title"] = "AI-Powered Resume Analyzer";
}

<h1>Resume Analyzer</h1>
<p>Upload your resume and provide a job description to get AI-powered insights!</p>

<form asp-controller="Home" asp-action="AnalyzeResume" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="resumeFile">Upload Resume (PDF/DOCX):</label>
        <input type="file" name="resumeFile" id="resumeFile" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="jobDescription">Job Description:</label>
        <textarea name="jobDescription" id="jobDescription" rows="5" class="form-control" placeholder="Paste the job description here..." required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Analyze</button>
</form>
