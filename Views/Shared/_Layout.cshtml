<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResumeAnalyzer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ResumeAnalyzer.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">

</head>
<body>
    <header class="py-5 text-center position-relative bg-light">
        <div class="container">
            <h1 class="display-4 fw-bold text-dark">Welcome to Resume Analyzer</h1>
            <p class="lead text-secondary">Analyze resumes effortlessly with AI-powered insights</p>
        </div>
        <div class="custom-header-overlay"></div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ResumeAnalyzer
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
